<div class="container">

  <div class="header">
    <h2><%=@flat.description%></h2>
    <h6> <%= link_to "Get back to flats' list", flats_path, class: "link"%></h6>
  </div>

  <div class="container-flat center-block">

    <% if @flat.pics.size > 0 %>
      <h4>Pic:</h4><%= image_tag @flat.pics.first.picture.url(:thumb) %>
    <% end %>
    <h4>Address:</h4><%=@flat.address%>
    <h4>Surface:</h4><%=@flat.surface%>
    <h4>Price:</h4><%=@flat.price%>â‚¬/night
    <h4>Beds:</h4><%=@flat.beds%>
    <h4>Landlord:</h4><%=@flat.user%>

    <div class="row edit text-right"><%= link_to "Let's update this flat", edit_flat_path(@flat), class: "link" %> </div>
    <div class="row edit text-right link"><%= link_to "Let's delete this flat", @flat, method: :delete, class: "link" %> </div>

  </div>

  <div class="spacer"></div>

</div>
