<div class="container">

  <div class="header">
    <h2><%=@flat.title%></h2>
    <h6> <%= link_to "Get back to flats' list", flats_path, class: "link"%></h6>
  </div>

  <div class="container-flat center-block well">

    <% if @flat.pics.size > 0 %>
    <div class="carousel_container">
      <div class="carousel">
        <h4>Pic:</h4><% @flat.pics.each do |pic| %>

            <div><%= image_tag pic.picture.url(:medium) %></div>

        <% end %>
      </div>
    </div>
    <% end %>

  <div class="wrapper_gold">
    <div class="col-sm-6 col-md-4">
      <div class="feature">
        <div class="feature-picture">
          <%= image_tag 'icon_45188.png', width: 75 %>
        </div>
          <h4>Description:</h4><%=@flat.description%>
          <h4>Address:</h4><%=@flat.address%> <%=@flat.zip_code%> <%=@flat.city%>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="feature">
        <div class="feature-picture">
          <%= image_tag 'icon_56104.png', width: 75 %>
        </div>
          <h4>Surface(m2):</h4><%=@flat.surface%>
          <h4>Beds:</h4><%=@flat.beds%>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="feature">
        <div class="feature-picture">
          <%= image_tag 'icon_22990.png', width: 75 %>
            <h4>Contact the landlord:</h4><%=@flat.user.email%>
            <h4>Price(â‚¬/night):</h4><%=@flat.price%>
        </div>
      </div>
    </div>

  </div>

      <% unless user_signed_in? && current_user.email == @flat.user.email %>
        <div class="text-right">
          <%= link_to "Let's book this flat!", new_flat_resa_path(@flat), class: "btn" %>
        </div>
      <% else %>
        <div class="text-right">
          <%= link_to "Get back to your profile!", account_path, class: "btn" %>
        </div>
      <% end %>

</div>

</div>



