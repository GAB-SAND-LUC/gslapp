<div class="container">

  <div class="header">
    <h2>Your profile !</h2>
    <h6>All we know about you is ...:  </h6>
  </div>

  <div class="container-account center-block well col-xs-6">

      <p class="text-right"><%= link_to 'Wanna edit your profile ?', edit_account_path, class: "link" %></p>

      <div class="panel panel-default">
        <div class="panel-heading">Name:</div>
          <div class="panel-body">
            <%=current_user.first_name%>  <%=current_user.last_name%>
          </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">Mail:</div>
          <div class="panel-body">
            <%=current_user.email%>
          </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">City:</div>
          <div class="panel-body">
            <%=current_user.city%>
          </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">Phone:</div>
          <div class="panel-body">
            <%=current_user.phone%>
          </div>
      </div>

  </div>

  <div class="container-account center-block well col-xs-6">

      <p class="text-right"><%= link_to 'Wanna add a flat?', new_flat_path, class: "link" %></p>

      <div class="panel panel-default">
        <div class="panel-heading">Flat(s): </div>
          <div class="panel-body">
            <%current_user.flats.each do |flat|%>
             <div class= "flat_list">
                  <p><%= link_to flat.title, flat_path(flat), class: "link text-left" %>
                  <%= link_to "  Edit", edit_flat_path(flat), class: "edition" %>
                  <%= link_to "  Delete", flat, method: :delete, class: "edition" %></p>
            </div>
            <% end %>
          </div>
      </div>



  </div>

  <div class="spacer"></div>

</div>
