<div class="container">

  <div class="header">
    <h2>Resend confirmation instructions</h2>
  </div>

  <div class="col-xs-3"></div>

  <div class="col-xs-6 container-flat center-block well">

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {role:"form", method: :post }) do |f| %>
        <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

      <div><%= f.submit "Resend confirmation instructions", class: "btn"  %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
