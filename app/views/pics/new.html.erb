<div class="container">

  <div class="header">
    <h2>Let's edit the flat!</h2>
    <h6> <%= link_to "Get back to flats' list", flats_path, class: "link"%></h6>
  </div>
  <div id="pictures-container">
    <%= render 'pictures' %>
  </div>
  <div class="row">
    <div class="col-xs-3"></div>
      <div class="col-xs-6 container-flat center-block">
        <%= form_for [@flat, @flat.pics.new], html: { multipart: true }, :remote => true do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "Bedroom1" %>
            <%= f.file_field :picture, class: "upload"%>
        <% end %>
        <%= link_to "Finish!", flat_path(@flat), class: "btn", id: "finish"%>
      </div>
    </div>

  <div class="spacer"></div>

</div>